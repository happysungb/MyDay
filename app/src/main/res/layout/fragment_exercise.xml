<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/exerciseGreeting"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/snowflake_regular"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/snowflake_regular"
                android:text="운동 종류" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:fontFamily="@font/snowflake_regular"
                android:text="운동시간(분)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_exercise1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/spinner_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:spinnerMode="dropdown" />

            <Button
                android:id="@+id/add_1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/snowflake_regular"
                android:text="추가" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_exercise2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/spinner_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:spinnerMode="dropdown" />
            <Button
                android:id="@+id/add_2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/snowflake_regular"
                android:text="추가" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_exercise3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/spinner_time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:spinnerMode="dropdown" />
            <Button
                android:id="@+id/add_3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/snowflake_regular"
                android:text="추가" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_exercise4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/spinner_time4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:spinnerMode="dropdown" />
            <Button
                android:id="@+id/add_4"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/snowflake_regular"
                android:text="추가" />
        </LinearLayout>

        <Button
            android:id="@+id/calc_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/snowflake_regular"
            android:text="계산하기" />
        <TextView
            android:id="@+id/result1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/snowflake_bold"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/result2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/snowflake_bold"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/result3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/snowflake_bold"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/result4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/snowflake_bold"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/calc_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/snowflake_bold"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>
