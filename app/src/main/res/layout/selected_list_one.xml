<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selected_list"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:columnCount="3">
        <TextView
            android:id="@+id/selected_food_name"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/snowflake_bold"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Bread"
            android:layout_marginStart="30dp"
            />
        <TextView
            android:id="@+id/selected_food_kcal"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/snowflake_regular"
            android:textSize="16sp"
            android:text="100kcal"
            android:layout_marginStart="30dp" />
        <TextView
            android:id="@+id/selected_food_count"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/snowflake_regular"
            android:textSize="16sp"
            android:text="2인분"
            android:layout_marginStart="30dp" />
        <TextView
            android:id="@+id/selected_food_sum"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_columnSpan="3"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/snowflake_regular"
            android:textStyle="bold"
            android:text="=> 100 * 2 = 200kcal"
            android:textColor="@color/black"
            android:layout_marginStart="30dp" />
    </GridLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/line">
    </ImageView>

</LinearLayout>