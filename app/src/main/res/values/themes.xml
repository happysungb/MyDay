<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="toolbarStyle">@style/CustomToolBar</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="CustomToolBar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/black</item>
    </style>
    <style name="CalendarDateTextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Theme.MyDay" parent="Base.Theme.MyDay" />
</resources>